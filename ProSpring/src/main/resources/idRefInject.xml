<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans	      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="bean1" class="java.lang.String">
        <constructor-arg index="0" value="test"/>
    </bean>

    <bean id="bean2" class="java.lang.String">
        <constructor-arg index="0" value="test"/>
    </bean>

    <bean id="idrefBean1" class="spring.helloworld.ioc.base.IdRefTestBean">
        <property name="id"><idref bean="bean1"/> </property>
    </bean>

    <bean id="idrefBean2" class="spring.helloworld.ioc.base.IdRefTestBean">
        <property name="id"><idref local="bean2"/></property>
    </bean>
</beans>